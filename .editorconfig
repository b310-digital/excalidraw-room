# EditorConfig helps maintain consistent coding styles between editors/IDEs
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown: keep intentional trailing spaces (for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML (CI configs, etc.)
[*.{yml,yaml}]
indent_size = 2

# JS / TS / JSON
[*.{js,jsx,ts,tsx,json}]
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles keep tabs
[Makefile]
indent_style = tab
